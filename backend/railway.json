{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheck": {
      "path": "/health",
      "initialDelaySeconds": 10,
      "timeoutSeconds": 5,
      "periodSeconds": 10,
      "successThreshold": 1,
      "failureThreshold": 3
    }
  }
}
